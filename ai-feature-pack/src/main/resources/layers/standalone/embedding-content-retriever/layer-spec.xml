<layer-spec xmlns="urn:jboss:galleon:layer-spec:2.0" name="embedding-content-retriever">
    <props>
        <prop name="org.wildfly.rule.add-on-depends-on" value="all-dependencies"/>
        <prop name="org.wildfly.rule.class" value="dev.langchain4j.rag.content.retriever.ContentRetriever"/>
        <prop name="org.wildfly.rule.add-on" value="ai-content-retriever,embedding-content-retriever"/>
        <prop name="org.wildfly.rule.add-on-description" value="Use embedding content retriever"/>
        <prop name="org.wildfly.rule.expect-add-on-families" value="ai-embedding-store,ai-embedding-model"/>
    </props>
    <dependencies>
        <layer name="ai"/>
    </dependencies>
    <feature spec="subsystem.ai">
        <feature spec="subsystem.ai.embedding-store-content-retriever">
            <param name="embedding-store-content-retriever" value="myretriever"/>
            <param name="embedding-model" value="myembedding"/>
            <param name="embedding-store" value="mystore"/>
            <param name="max-results" value="${org.wildfly.ai.embedding.retriever.max.results,env.EMBEDDING_RETRIEVER_MAX_RESULTS:2}"/>
            <param name="min-score" value="${org.wildfly.ai.embedding.retriever.min.score,env.EMBEDDING_RETRIEVER_MIN_SCORE:0.7}"/>
        </feature>
    </feature>
</layer-spec>
