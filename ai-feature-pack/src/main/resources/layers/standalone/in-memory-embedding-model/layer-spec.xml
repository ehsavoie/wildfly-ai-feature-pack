<layer-spec xmlns="urn:jboss:galleon:layer-spec:2.0" name="in-memory-embedding-model">
    <props>
        <prop name="org.wildfly.rule.add-on-depends-on" value="only:ai"/>
        <prop name="org.wildfly.rule.add-on" value="ai-embedding-model,in-memory-embedding-model"/>
        <prop name="org.wildfly.rule.add-on-description" value="In memory embedding model"/>
    </props>
    <dependencies>
        <layer name="ai"/>
    </dependencies>
    <packages>
        <package name="dev.langchain4j.embeddings.all-minilm-l6-v2"/>
        <package name="dev.langchain4j.embeddings.all-minilm-l6-v2-q"/>
        <package name="dev.langchain4j.embeddings.bge-small-en"/>
        <package name="dev.langchain4j.embeddings.bge-small-en-q"/>
        <package name="dev.langchain4j.embeddings.bge-small-en-v15"/>
        <package name="dev.langchain4j.embeddings.bge-small-en-v15-q"/>
        <package name="dev.langchain4j.embeddings.e5-small-v2"/>
        <package name="dev.langchain4j.embeddings.e5-small-v2-q"/>
    </packages>
    <feature spec="subsystem.ai">
        <feature spec="subsystem.ai.in-memory-embedding-model">
            <param name="in-memory-embedding-model" value="myembedding"/>
            <param name="module" value="dev.langchain4j.embeddings.all-minilm-l6-v2"/>
            <param name="embedding-class" value="dev.langchain4j.model.embedding.onnx.allminilml6v2.AllMiniLmL6V2EmbeddingModel"/>
        </feature>
    </feature>
</layer-spec>
