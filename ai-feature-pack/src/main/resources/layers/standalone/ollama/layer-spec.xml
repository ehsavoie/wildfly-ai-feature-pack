<layer-spec xmlns="urn:jboss:galleon:layer-spec:2.0" name="ollama">
    <props>
        <prop name="org.wildfly.rule.add-on-depends-on" value="only:ai"/>
        <prop name="org.wildfly.rule.add-on" value="ai,ollama"/>
        <prop name="org.wildfly.rule.add-on-cardinality" value="1"/>
        <prop name="org.wildfly.rule.add-on-description" value="Use ollama for LLM interactions and embeddings"/>
    </props>
    <dependencies>
        <layer name="ai"/>
    </dependencies>
    <packages>
        <package name="dev.langchain4j.ollama"/>
    </packages>
    <feature spec="subsystem.ai">
        <feature spec="subsystem.ai.ollama-chat-model">
            <param name="ollama-chat-model" value="mychat"/>
            <param name="base-url" value="http://127.0.0.1:11434"/>
            <param name="model-name" value="llama3:8b"/>
            <param name="temperature" value="0.9"/>
            <param name="log-requests" value="true"/>
            <param name="log-responses" value="true"/>
        </feature>
    </feature>
</layer-spec>
